<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6Assets2024_OscarZ.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="loginbackgr"
             >
    <VerticalStackLayout>

        <Entry x:Name="TxtEmail" Placeholder="Email..." FontSize="20" Keyboard="Email" />
        
        <Entry x:Name="TxtPassword" Placeholder="Password..." FontSize="20" Keyboard="Text" IsPassword="True" />

        <Button x:Name="BtnIngresar" Text="Ingresar" BackgroundColor="Green" TextColor="White" />
    </VerticalStackLayout>
</ContentPage>